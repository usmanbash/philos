<!doctype html>
<html
	class='no-js !h-full'
	lang='{{ request.locale.iso_code }}'>
	<head>
		<meta charset='utf-8'>
		<meta
			http-equiv='X-UA-Compatible'
			content='IE=edge'>
		<meta
			name='viewport'
			content='width=device-width,initial-scale=1'>
		<meta
			name='theme-color'
			content=''>
		<link
			rel='canonical'
			href='{{ canonical_url }}'>
		<link
			rel='preconnect'
			href='https://cdn.shopify.com'
			crossorigin>

		{%- if settings.favicon != blank -%}
			<link
				rel='icon'
				type='image/png'
				href='{{ settings.favicon | image_url: width: 32, height: 32 }}'>
		{%- endif -%}

		<title>{{ shop.name }}</title>

		<meta
			name='description'
			content='{{ page_description | escape }}'>

		{{ content_for_header }}

		{{ 'fonts.css' | asset_url | stylesheet_tag }}
		{{ 'theme.css' | asset_url | stylesheet_tag }}

		{%- comment -%}Blipping Fix for AplineJS{%- endcomment -%}
		<style>
			[x-cloak] {
				display: none !important;
			}
		</style>

		<script>
			document.documentElement.className = document.documentElement.className.replace(
				'no-js',
				'js'
			)
		</script>
	</head>

	<body class='bg-charcoal h-full flex flex-col'>
		<div
			id='landingPage'
			class='flex-1'>
			{% section 'header-landing' %}

			<main
				id='MainContent'
				role='main'
				tabindex='-1'
				class='password-main transition-fad h-full'>
				<div class='page page--password lenis-scroller flex flex-col h-full'>
					{{ content_for_layout }}
					{% section 'footer-landing' %}
				</div>
			</main>
		</div>

		<script
			src='{{ ' theme.js' | asset_url }}'
			defer='defer'></script>
	</body>
</html>
