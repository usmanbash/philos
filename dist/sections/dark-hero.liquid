{%- comment-%}
Section: Dark Hero
Description: A section that displays a dark hero with a headline and a logo.

Usage: This section is used to display a dark hero with a headline and a logo.

Accepts:
- Headline: Text field that represents hero headline.
{%- endcomment -%}

<div
  x-data="darkHero"
  data-scroll
  data-scroll-call="inViewportAnimation"
  class="dark-hero w-full h-screen flex justify-center items-center relative px-5 sm:px-0 py-14 bg-charcoal">
  {%- comment -%} Content Wrapper {%- endcomment -%}
  <div
    data-scroll
    data-scroll-repeat
    data-scroll-call="toggleNavbar">
    {%- comment -%} Headline {%- endcomment -%}
    {%- if section.settings.headline != blank -%}
      <h1
        data-animate
        data-preset='fadeUp'
        class="text-24 lg:text-46 text-gray font-ivar text-center bottom-text">
        {{ section.settings.headline }}
      </h1>
    {%- endif -%}

    {%- comment -%} Logo {%- endcomment -%}
    {% comment %}
      <div
        data-animate
        data-preset='fadeUp'
        data-to='{"delay": 0.2}'
        class="flex justify-center mt-5 lg:mt-16">
        <div class="dark-hero-logo logo--white">
          {%- render 'icon-logo' -%}
        </div>
      </div>
    {% endcomment %}

  </div>
</div>


{% schema %}
{
  "name": "Dark Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Headline",
      "id": "headline"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Dark Hero"
    }
  ]
}
{% endschema %}
