{%- comment -%}
Section: Editorials
description: A section that displays a slider of featured pages

Accepts:
- Title: Text field that will be used as the title
- Featured Pages: Repeater block that contains a page headline and a page picker

{%- endcomment -%}

<div class="editorials relative w-full py-14 sm:px-10 lg:px-0 text-black">

  {%- if section.blocks.size > 0 -%}
    {%- assign slides = section.blocks | map: 'settings' -%}
    {% render 'slider',
      card_type: 'page_card',
      title: section.settings.title,
      slides: slides,
      space_between_slides: 20,
      slides_per_view: 4,
      slides_per_view_mob: 1.2,
      slider_navbar_class: 'px-5 sm:px-0 lg:px-10',
      centered_slides: true,
      loop_on_mobile: true,
      loop_on_desk: true
    %}
  {%- endif -%}
</div>
{% schema %}
{
 "name": "Editorials",
 "tag": "section",
 "settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  }
 ],
 "blocks": [
  {
    "type": "featured_pages",
    "name": "Featured Pages",
    "settings": [
      {
        "type": "text",
        "id": "page_headline",
        "label": "Page Headline"
      },
      {
        "type": "page",
        "id": "page",
        "label": "Page"
      }
    ]
  }
 ],
 "presets": [
  {
    "name": "Editorials"
  }
 ]
}
{% endschema %}

