{%- comment -%}
Section: Featured Products
Description: A section that displays a slider of featured products

Accepts:
- Title: Text field that will be used as the title
- Link Text: Text field that will be used as the link text
- Link: URL field that represents the link
- Featured Products: Repeater block that contains a product picker
{%- endcomment -%}

<div class="featured-products relative w-full py-14 sm:px-10">
  {% render 'slider',
    card_type: 'product_card',
    data_source: 'block',
    title: section.settings.title,
    link: section.settings.url,
    link_text: section.settings.link_text,
    slides: section.blocks,
    space_between_slides: 20,
    slides_per_view: 4,
    slides_per_view_mob: 1.2,
    slider_navbar_class: 'px-5 sm:px-0',
    centered_slides: true,
    loop_on_mobile: true,
    loop_on_desk: true
  %}
</div>
{% schema %}
{
 "name": "featured-products",
 "tag": "section",
 "settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  },
  {
    "type": "text",
    "id": "link_text",
    "label": "Link Text"
  },
  {
    "type": "url",
    "id": "url",
    "label": "Link"
  }
 ],
 "blocks": [
  {
    "type": "featured_products",
    "name": "Featured Products",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "Product"
      }
    ]
  }
 ],
 "presets": [
  {
    "name": "Featured Products"
  }
 ]
}
{% endschema %}

