{%- comment -%}
Section: Header Landing
Description: Header for Landing Page
{%- endcomment -%}

<header
  x-data="headerLanding"
	x-cloak
  class="header-landing fixed left-0 top-0 w-full z-50">
	<nav class="header-navigation header-navigation--landing">

		<div class='header-navigation__wrapper flex flex-row items-center transition px-5 lg:px-10 py-3 bg-white3 sm:bg-charcoal text-black sm:text-cloud'>
			{% comment %} Column: Left  {% endcomment %}
			<div class='header__left basis-full flex flex-row items-center'>

        {% liquid
          # Default items
          # Mobile Menu Item
          assign _mobile_menu_item = 'Opening Fall 2024'
          # Desktop Menu Items
          assign _desktop_items = 'Philos Running, Opening Fall 2024'
          assign _desktop_items = _desktop_items | split: ','
          # Block items (desktop menu items)
          assign block_menu_items = ''

          # Loop through blocks (dynamic data which is added in the theme editor)
          if section.blocks.size > 0
            for block in section.blocks
              case block.type
                when 'mobile_menu_item'
                  assign mobile_menu_item = block.settings.mobile_menu_item

                when 'menu_items'
                  if block_menu_items != ''
                    assign block_menu_items = block_menu_items | append: ','
                  endif

                  assign block_menu_items = block_menu_items | append: block.settings.menu_item
              endcase
            endfor
          endif

          assign block_menu_items = block_menu_items | split: ','
          # Use default items if no items have been added
          assign mobile_menu_item = mobile_menu_item | default: _mobile_menu_item
          assign menu_items = block_menu_items | default: _desktop_items

        %}
        {%- comment -%} Menu Items {%- endcomment %}
        <ul class="flex items-center gap-2 lg:gap-4 w-full">
          <li class="block lg:hidden text-lp-nav-font font-medium uppercase text-black sm:text-cloud">
            {{ mobile_menu_item }}
          </li>
          {%- for menu_item in menu_items -%}
            <li class="hidden lg:block text-lp-nav-font font-medium uppercase text-black sm:text-cloud">
              {{ menu_item }}
            </li>
          {%- endfor -%}
        </ul>

      </div>

			{%- comment -%} Column: Center {%- endcomment -%}
      <div class='header__center flex flex-row items-center justify-center z-50 text-black sm:text-white'>
        {% comment %} App Logo {% endcomment %}
        {% comment %}
        <div class="logo logo--landing">
           {%- render 'icon-logo' -%}
         </div>
        {% endcomment %}
        {% comment %} {% render 'header-logo', url: '/password' %} {% endcomment %}
      </div>

			{% comment %} Column: Right {% endcomment %}
			<div class='header__right basis-full flex flex-row items-center justify-end'>
				{% comment %} Location {% endcomment %}
        {% render 'header-location' %}
			</div>

		</div>

	</nav>
</header>

{% schema %}
{
	"name": "Header Landing",
	"settings": [],
	"blocks": [
    {
      "type": "mobile_menu_item",
      "name": "Mobile Menu Item",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "mobile_menu_item",
          "label": "Mobile Menu Item"
        }
      ]
    },
    {
      "type": "menu_items",
      "name": "Desktop Menu Items",
      "settings": [
        {
          "type": "text",
          "id": "menu_item",
          "label": "Desktop Menu Item"
        }
      ]
    }
  ]
}
{% endschema %}
