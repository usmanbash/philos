<div x-data='accordion({
  isOpen: {{ isOpen | default: false }},
  group: {{ group | default: false }},
  id: {{ id | default: 1 }},
})'
@accordion-set-active.window='setActive($event.detail)'
class='alpine-accordion {{ accordion_wrapper_class }}'>

  <div
    @click='toggle'
    class='accordion-title {{ accordion_class }}'>
    <span class='{{ title_class }}'>{{ title }}</span>
    <div 
      class="accordion-plus {{ accordion_plus_class }}"
      :class="{
        'open': isOpen
      }">
        {% render 'icon-accordion-plus' %}
    </div>
  </div>

  <div
    x-ref='foldable'
    class="accordion-foldable overflow-hidden">
    <div x-ref='reference'>
      <div class='{{ content_class }}'>{{ content }}</div>
    </div>
  </div>
</div>
