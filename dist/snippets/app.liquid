{%- doc -%}
  Renders the global APP object.

{%- enddoc -%}

{%- liquid 

  # get currency
  assign currency = shop.currency
  assign currency_code_enable = settings.currency_code_enable


-%}
<script>
	// Global APP object
	window.Shopify.APP = {
		api: {
			baseUrl: '{{ shop.secure_url }}/api',
			storefront_access_token: '{{ settings.storefront_access_token }}'
		},
    currency: {{ currency | json }},
    currency_code_enable: {{ currency_code_enable | json }},
	}
</script>
