{%- doc -%}
  Renders the back-in-stock button.

  @param {string} text - button text (required)
{%- enddoc -%}
{%- liquid
  # Parameter validation and defaults
  assign __defaultButtonText = 'bis.button_text' | t
  assign text = text | default: __defaultButtonText
-%}
<button
  @click.prevent="$store.backInStock.openModal()"
  class='w-full px-6 py-6 xl:py-4 text-white3 bg-black lg:hover:bg-white2 lg:hover:text-black border border-black transition-colors uppercase'>
  {{ text }}
</button>
