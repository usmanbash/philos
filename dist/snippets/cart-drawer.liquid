<section
  x-data='drawer({ direction: "right" })'
	x-cloak
	@toggle-cart.window='toggle'
	@open-cart.window='open'
  @close-cart.window='close'
  @popstate.window='close'
  role='dialog'
  aria-modal='true'
  aria-labelledby='{{ "general.cart" | t }}'
  class='cart-drawer fixed top-0 left-full h-full w-full wide:landscape:w-full lg:w-1/2 2xl:w-[30%] z-50 text-black'>

	<div
		@click='close'
		x-show="isOpen"
		x-transition.opacity.duration.400ms
		class="fixed left-0 top-0 z-10 w-full h-full">
		<div class='bg-black opacity-40 top-0 left-0 w-full h-full'></div>
	</div>

	<div
		x-ref='drawer'
		class="h-full w-full px-5 sm:px-10 md:px-0 sm:ml-auto z-20 bg-white2 relative flex flex-col">
		<div class='h-[4.5rem] px-8 flex justify-end items-center text-16 absolute right-0 top-0'>
			<p
        role="button"
        aria-label="{{ 'general.close' | t }} {{ 'cart.title' | t }}"
				class='cursor-pointer link link--line text-16'
				@click='close'>
        {{ 'general.close' | t }}
      </p>
		</div>

		{% render 'mini-cart', showTitle: true, viewBag: true, preventScroll: true %}
	</div>

</section>
