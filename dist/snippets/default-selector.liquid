{%- comment -%}
Snippet: Default Selector
Description: A default select element for product options
{%- endcomment -%}

<select
  x-model="{{ option_name }}"
  class="default-selector w-full px-3 py-1 border"
  id="Option-{{ section.id }}-{{ forloop.index0 }}"
  name="options[{{ option.name | escape }}]">
  {%- for value in option.values -%}
    {%- if option.selected_value == value -%}
      <option selected="selected" value="{{ value | escape }}">
        {{ value }}
      </option>
    {%- else -%}
      <option value="{{ value | escape }}">
        {{ value }}
      </option>
    {%- endif -%}
  {%- endfor -%}
</select>
