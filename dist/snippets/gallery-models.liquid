{% comment %}
  Snippet: Gallery Models
  Description: This snippet is used to display an information about models in gallery
               for a size guide.

Accepts:
- Metaobject - gallery_model (metaobject.system.type == 'gallery_model')

Fields:
- description
- model_name
- size
- height
- bust
- waist_natural
- hips
{% endcomment %}
<div class="gallery-models">
  <template x-for="(model, index) in $store.sizeGuide.galleryModels" :key="index">
    <div class="size-guide-example size-guide-example--model relative pt-6">

      {%- comment -%}Description{%- endcomment -%}
      <template x-if="model.description">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p x-text="model.description" class="w-full"></p>
        </div>
      </template>

      {%- comment -%}Size{%- endcomment -%}
      <template x-if="model.size">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p class="w-1/2">{{ 'product.size_guide.size' | t }}</p>
          <p x-text="model.size" class="w-1/2"></p>
        </div>
      </template>

      {%- comment -%}Height{%- endcomment -%}
      <template x-if="model.height">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p class="w-1/2">{{ 'product.size_guide.height' | t }}</p>
          <p x-text="model.height" class="w-1/2"></p>
        </div>
      </template>

      {%- comment -%}Bust{%- endcomment -%}
      <template x-if="model.bust">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p class="w-1/2">{{ 'product.size_guide.bust' | t }}</p>
          <p x-text="model.bust" class="w-1/2"></p>
        </div>
      </template>

      {%- comment -%}Waist{%- endcomment -%}
      <template x-if="model.waist_natural">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p class="w-1/2">{{ 'product.size_guide.waist' | t }}</p>
          <p x-text="model.waist_natural" class="w-1/2"></p>
        </div>
      </template>

      {%- comment -%}Hips{%- endcomment -%}
      <template x-if="model.hips">
        <div class="flex w-full border-b border-gray py-6 text-16">
          <p class="w-1/2">{{ 'product.size_guide.hips' | t }}</p>
          <p x-text="model.hips" class="w-1/2"></p>
        </div>
      </template>
    </div>
  </template>
</div>
