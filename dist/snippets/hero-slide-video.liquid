{% comment %} 
  Snippet: hero-slide-video.liquid
  Description:
    This snippet is used to display a video in the hero slider.

  Settings:
    - data (object): The block data
    - data.video (video): The desktop video
    - data.video_mobile (video, optional): The mobile video

  Usage:
    {% raw %}
      {% render 'hero-slide-video', data: block.settings %}
    {% endraw %}

  Dependencies:
    - hero-slide-content.liquid

{% endcomment %}
{%- liquid

  # get desktop video
  assign desktop_video = data.video
  # get mobile video, default to desktop video
  assign mobile_video = data.video_mobile | default: desktop_video

-%}
<div class="hero-slide-video relative w-full h-full">
  
  {%- comment -%} Video (Mobile) {%- endcomment -%}
  {%- if mobile_video != blank -%}
    <div class="video-wrapper video--mobile lg:hidden">
      {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    </div>
  {%- endif -%}

  {%- comment -%} Video (Desktop) {%- endcomment -%}
  {%- if desktop_video != blank -%}
    <div class="video-wrapper video--desktop hidden lg:block">
      {{ desktop_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    </div>
  {%- endif -%}

  {%- render 'hero-slide-content', data: data -%}

</div>