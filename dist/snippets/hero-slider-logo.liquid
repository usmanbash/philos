{%- comment -%}
Snippet: Hero Slider

Slider settings
  slides: Array of slides (blocks)
{%- endcomment -%}

<div 
  x-data="heroSliderLogo"
  class="hero-slider-logo slider-wrapper relative w-full h-full">
  <div 
    x-ref="sliderEl" 
    class="swiper-container relative w-full h-full overflow-hidden">
    {%- comment -%} Slider {%- endcomment -%}
    <div class="swiper-wrapper"> 
      {%- if slides.size > 0 -%}
        {%- for block in slides -%}
          <div class="swiper-slide relative z-0">
            {%- case block.type -%}
              
              {%- comment %} Image {% endcomment -%}
              {%- when 'image' -%}
                {%- assign desktop_image = block.settings.image -%}
                {%- assign mobile_image = block.settings.image_mobile | default: desktop_image -%}
                {%- if desktop_image != blank -%}
                  {%-
                    render 'parallax-picture',
                    image: desktop_image,
                    image_mobile: mobile_image,
                  -%}
                {%- endif -%}

              {%- comment %} Image {% endcomment -%}
              {%- when 'video' -%}
                {%- assign desktop_video = block.settings.video -%}
                {%- assign mobile_video = block.settings.video_mobile | default: desktop_video -%}
                <div class="relative w-full h-full">
                  {%- comment -%} Video (Mobile) {%- endcomment -%}
                  {%- if mobile_video != blank -%}
                    <div class="video-wrapper video--mobile lg:hidden">
                      {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
                    </div>
                  {%- endif -%}

                  {%- comment -%} Video (Desktop) {%- endcomment -%}
                  {%- if desktop_video != blank -%}
                    <div class="video-wrapper video--desktop hidden lg:block">
                      {{ desktop_video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
                    </div>
                  {%- endif -%}
                </div>

            {%- endcase -%}

            {%- if block.settings.cta != blank -%}
              <div 
                data-href="{{ block.settings.cta.url }}" 
                class="hero-slide-clickable absolute top-0 left-0 w-full h-full z-0"
                @click="handleSlideClick">
              </div>
            {%- endif -%}

            {%- render 'hero-logo-slide-content', slide: block -%}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>
