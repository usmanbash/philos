{%- comment -%}
Snippet: Product Media
Description: A snippet that displays the product media
It switches between different media types and displays them accordingly
{%- endcomment -%}

{% liquid
  assign default_image_class = 'object-cover object-bottom w-full h-full bg-white4'
  assign default_class = 'object-cover w-full h-full'
  assign image_class = class | default: default_image_class
  assign media_class = class | default: default_class
%}

{%- case media.media_type -%}
	{%- when 'image' -%}
		<img
			draggable="false"
			class='{{ image_class }}'
			src='{{ media | image_url: width: media.width }}'
			alt='{{ media.preview_image.alt }}'
			loading='lazy'>
	{%- when 'external_video' -%}
		{{ media | external_video_tag: class: media_class }}
	{%- when 'video' -%}
		{{ media | video_tag: controls: true, class: media_class }}
	{%- when 'model' -%}
		{{ media | model_viewer_tag: class: media_class }}
	{%- else -%}
    <img
      draggable="false"
      class="{{ image_class }}"
      src="{{ media | image_url: width: media.width }}"
      alt="{{ media.alt | escape }}">
{%- endcase -%}
