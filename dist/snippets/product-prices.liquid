{%- doc -%}
  Renders Product Prices.
{%- enddoc -%}

{%- liquid

  # get currency code
  assign currency_code = cart.currency.iso_code 

-%}

<div class="flex items-center justify-center text-black" id="price-{{ id }}">
  {% comment %} DISCOUNTED PRICE {% endcomment %}
  <template x-if='is_comparable'>
    <div class='comparable-price'>
      <span
        x-text='compare_at_price'
        class="text-18 text-sonicSilver line-through mx-3">{{ _compare_at_price | money_without_trailing_zeros }}</span>
      <span
        x-text='price'
        class="text-18 text-sonicSilver mx-3">{{ _price | money_without_trailing_zeros }}</span>
    </div>
  </template>

  {% comment %} IS ON SALE TAG {% endcomment %}
  <template x-if="is_on_sale">
    <div class='is_on_sale'>
      <span class="px-4 py-1 mx-3 text-sm font-bold text-white bg-black text-18">{{ 'product.sale' | t }}</span>
    </div>
  </template>

  {% comment %} SIMPLE PRICE WITHOUT DISCOUNTS {% endcomment %}
  <template x-if='!is_comparable'>
    <div class='not-comparable text-center'>
      <span
        x-text='price'
        class="text-18">{{ _price | money_without_trailing_zeros }}</span>
    </div>
  </template>
</div>
