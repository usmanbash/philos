<section
  x-data='drawer({ direction: "right", store: "sizeGuide" })'
	x-cloak
  @toggle-size-guide.window="toggle"
	@open-size-guide.window="open"
  @close-size-guide.window="close"
  @popstate.window="close"
  role="dialog"
  aria-modal="true"
  aria-labelledby="{{ 'product.size_guide.title' | t }}"
	class='size-guide-drawer fixed top-0 left-full h-full w-full md:w-1/2 lg:w-2/5 2xl:w-[33%] z-50 text-black'>

  {%- comment -%}Overlay{%- endcomment -%}
	<div
		x-show="isOpen"
		x-transition.opacity.duration.400ms
		class="fixed left-0 top-0 w-full h-full z-10"
    @click='close'>
		<div class='top-0 left-0 w-full h-full bg-black opacity-40'></div>
	</div>

  {%- comment -%}Drawer Content {%- endcomment -%}
	<div
		x-ref='drawer'
		data-lenis-prevent
		class="relative flex flex-col h-full w-full sm:ml-auto p-10 z-20 bg-white2 overflow-y-auto scroll-smooth">

    {%- comment -%}Header{%- endcomment -%}
		<div class='flex w-full mb-10'>
      {%- assign default_title = 'product.size_guide.title' | t -%}
      {%- assign size_guide_title = section.settings.size_guide_title |  default: default_title -%}
      <h3 class="font-ivar text-46">{{ size_guide_title }}</h3>
      <button
        type='button'
        aria-label="{{ 'general.close' | t }} {{ size_guide_title }}"
        class="ml-auto"
        @click='close'>
        <span class="link link--line text-16">{{ 'general.close' | t }}</span>
      </button>
		</div>

    {%- comment -%}Size Guide Content{%- endcomment -%}
    {% render 'size-guide' %}
	</div>

</section>
