			"name": "Image",
			"settings": [
				{
					"type": "image_picker",
					"label": "Desktop Image",
					"id": "image"
				},
				{
					"type": "image_picker",
					"label": "Mobile Image",
					"id": "image_mobile"
				},
        {
          "type": "text",
