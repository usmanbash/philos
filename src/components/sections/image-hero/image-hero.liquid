{%- comment -%}
	Section: Image Hero
	Description: A section that displays a hero with a background image, headline
	             and additional text.

	Usage: This section is used to display a hero with a headline and text.

	Accepts:
	- Image: Image picker that represents hero background image.
	- Headline: Text field that represents hero headline.
	- Text: Text field that represents hero additional text.
{%- endcomment -%}

{% render 'image-hero',
  image: section.settings.image,
  title: section.settings.headline,
  text: section.settings.text
%}


{% schema %}
{
	"name": "Image Hero",
	"tag": "section",
	"settings": [
		{
			"type": "image_picker",
			"label": "Image",
			"id": "image"
		},
		{
			"type": "text",
			"label": "Headline",
			"id": "headline"
		},
		{
			"type": "text",
			"label": "Text",
			"id": "text"
		}
	],
	"blocks": [],
	"presets": [
		{
			"name": "Image Hero"
		}
	]
}
{% endschema %}
